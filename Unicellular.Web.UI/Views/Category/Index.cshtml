
@Styles.Render( "~/bundles/plugins/bsDialogcss" )
@Styles.Render( "~/bundles/plugins/bsvalidatorcss" )
@Styles.Render( "~/Content/ztreecss" )
<div class="row" style="padding:0px;">
    <div class="col-sm-3">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">分类列表</h3>
            </div><!-- /.box-header -->

            <div class="box-body">
                <ul id="tree" class="ztree"></ul>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">分类表单</h3>
            </div><!-- /.box-header -->

            
            <form id="Form" class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                            <label for="CATEGORY_CODE" class="control-label col-sm-2">分类编码</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="CATEGORY_CODE" name="CATEGORY_CODE"
                                       placeholder="最大32个字符"
                                       data-bind="value:CATEGORY_CODE">
                        </div>
                    </div>
                    <div class="form-group" style="margin-top:10px;">
                            <label for="CATEGORY_NAME" class="control-label col-sm-2">分类名称</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="CATEGORY_NAME" name="CATEGORY_NAME"
                                       placeholder="最大64个字符"
                                       data-bind="value:CATEGORY_NAME">
                        </div>
                    </div>
                    <div class="form-group" style="margin-top:10px;">
                        <label for="CATEGORY_DES" class="control-label col-sm-2">分类描述</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="CATEGORY_DES" name="CATEGORY_DES"
                                      rows="4"
                                      placeholder="最大256个字符"
                                      data-bind="value:CATEGORY_DES"></textarea>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-sm-4 col-sm-offset-3">
                            <button id="btn_add" type="button" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>添加子节点
                            </button>
                            <button id="btn_edit" type="button" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
                            </button>
                            <button id="btn_delete" type="button" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
</div>

@section ChildPageJs{
    @Scripts.Render( "~/bundles/plugins/bsDialogjs" )
    @Scripts.Render( "~/bundles/plugins/knockoutjs" )
    @Scripts.Render( "~/bundles/plugins/bsvalidatorjs" )
    @Scripts.Render( "~/bundles/ztreejs" )
    <script type="text/javascript" src="~/Scripts/Category/Index.js"></script>
}
